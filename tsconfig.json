{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false
  },
  "scripts": {
    "prestart": "tsc -p .",
    "start": "node ./dist/index.js"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "**/*.spec.ts"]
}
